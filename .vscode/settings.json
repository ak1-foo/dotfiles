{
    // general
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "all",
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」てにをはがのともへでや",
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "files.autoGuessEncoding": true,
    "explorer.confirmDragAndDrop": false,
    "workbench.startupEditor": "none",

    // not supported in EditorConfig
    "files.trimFinalNewlines": true,

    // GitHub Copilot
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "off",
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on",
        },
    },

    // application scope settings
    "update.showReleaseNotes": false,
    "window.newWindowDimensions": "maximized",
    "security.workspace.trust.untrustedFiles": "open",

    // theme
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#404040"
    },
    "workbench.iconTheme": "material-icon-theme",

    // terminal
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // pdf
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "latex-workshop.view.pdf.invert": 0.94,
    "latex-workshop.view.pdf.invertMode.brightness": 2,

    // latex auto build
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-interaction=nonstopmode",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.clean.method": "glob",
    "latex-workshop.latex.clean.fileTypes": [
        "%DOCFILE%.acn",
        "%DOCFILE%.acr",
        "%DOCFILE%.alg",
        "%DOCFILE%.aux",
        "%DOCFILE%.bbl",
        "%DOCFILE%.blg",
        "%DOCFILE%.dvi",
        "%DOCFILE%.fdb_latexmk",
        "%DOCFILE%.fls",
        "%DOCFILE%.glg",
        "%DOCFILE%.glo",
        "%DOCFILE%.gls",
        "%DOCFILE%.idx",
        "%DOCFILE%.ind",
        "%DOCFILE%.ist",
        "%DOCFILE%.lof",
        "%DOCFILE%.log",
        "%DOCFILE%.lot",
        "%DOCFILE%.nav",
        "%DOCFILE%.out",
        "%DOCFILE%.snm",
        "%DOCFILE%.synctex.gz",
        "%DOCFILE%.synctex.gz(busy)",
        "%DOCFILE%.synctex(busy)",
        "%DOCFILE%.toc",
        "%DOCFILE%.vrb",
        "%DOCFILE%_minted%DOCFILE%",
    ],

    // PATH
    "vscode-neovim.neovimExecutablePaths.win32": "nvim",
}
